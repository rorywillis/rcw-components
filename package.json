{
  "name": "rcw-components",
  "version": "0.1.17",
  "private": false,
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://rorywillis.github.io/rcw-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/rorywillis/rcw-components.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@chakra-ui/react": "^1.6.10",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "framer-motion": "^4.1.17",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "start": "start-storybook -p 6006 -s public",
    "build": "rm -rf ./dist && webpack && tsc ./dist/esm/index.js --outDir ./dist --declaration --jsx react-jsx --esModuleInterop true --declarationMap --allowJs",
    "storybook:build": "rm -rf ./dist && tsc && build-storybook --output-dir ./docs",
    "storybook:deploy": "npm run storybook:build && gh-pages -d docs && rm -rf ./docs",
    "npm:publish": "np"
  },
  "np": {
    "yarn": false,
    "tests": false,
    "no-release-draft": true
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@purtuga/esm-webpack-plugin": "^1.5.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/node-logger": "^6.3.12",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.12",
    "@types/react-router-dom": "^5.3.2",
    "cross-env": "^7.0.3",
    "gh-pages": "^3.2.3",
    "np": "^7.5.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^4.44.2",
    "webpack-cli": "^4.9.1"
  },
  "peerDependencies": {
    "@chakra-ui/react": "^1.6.10",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "framer-motion": "^4.1.17",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.4"
  }
}
